<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".detaysayfasii">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="1400dp"
        tools:ignore="MissingConstraints">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#CFD8DC"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme" />

            <Button
                android:id="@+id/takvim"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/takvim" />
            <EditText
                android:id="@+id/edittextsaat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="800dp"
                android:layout_marginTop="-140dp"
                android:text="10.00"
                android:textColor="#212121"
                android:visibility="invisible"
                android:textSize="50dp"/>


            <EditText
                android:id="@+id/edittexttarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="-90dp"
                android:textColor="#212121"
                android:textSize="50dp"
                android:text="03.03.2000" />

            <EditText
                android:id="@+id/edittextbaslik"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#212121"
                android:textStyle="bold"
                android:layout_marginTop="80dp"
                android:hint="                Notlarınıza Başlık ekleyiniz"
                android:textSize="50dp" />


            <EditText
                android:id="@+id/editextyazi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="40dp"
                android:hint="Notlarınızı yazınız " />

            <Button
                android:id="@+id/btnarsiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arşivden Seç"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="700dp"
                android:textSize="50dp"
                android:background="@color/white"
                />

            <Button
                android:id="@+id/btnfotocek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fotoğraf Çek"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_marginTop="20dp"
                android:textSize="50dp"
                android:layout_marginLeft="240dp"
                />


            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-850dp"
                android:layout_marginRight="20dp"/>






        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttontıkla"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="380dp"
        android:layout_marginEnd="430dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/cameraekle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>